[user]
  name = André Ligné
  useconfigonly = true

[core]
  excludesfile = "~/.gitignore"
  editor = nvim
  pager = diff-so-fancy | less --tabs=4 -RFX

[merge]
  tool = splice
  ff = true

[alias]
  co = checkout
  lg = log --oneline --decorate --all --graph
  pf = push --force-with-lease
  pr = pull --rebase
  undeployed = !git fetch --multiple origin && git log origin/production..origin/master --oneline
  br = !git for-each-ref --sort=committerdate refs/heads/ --format=' %(HEAD) %(color:green)%(committerdate)%(color:reset) %(color:yellow)%(refname:short)%(color:reset)' | tail -n10
  amend-author = commit --reset-author --amend --no-edit

[push]
  default = current

[branch]
  autosetuprebase = always

[commit]
  template = ~/.gitmessage

[init]
  templatedir = ~/.git_templates

[rebase]
  autosquash = true

[remote "origin"]
  prune = true
