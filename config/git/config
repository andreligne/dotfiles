[user]
  name = André Ligné
  useconfigonly = true

[core]
  excludesfile = "~/.config/git/ignore"
  editor = nvim
  pager = "less -S"

[merge]
  tool = splice
  ff = true

[alias]
  lg = log --oneline --decorate --all --graph
  pf = push --force-with-lease
  pr = pull --rebase
  undeployed = !git fetch --multiple origin && git log origin/production..origin/master --oneline
  rb = !git fetch origin && git rebase origin/master
  amend-author = commit --reset-author --amend --no-edit
  cloc = !cloc --vcs git

[push]
  default = current

[status]
  showUntrackedFiles = all

[branch]
  autosetuprebase = always

[commit]
  template = ~/.gitmessage

[rebase]
  autosquash = true
  autostash = true

[remote "origin"]
  prune = true
