{
  "languageserver": {
    "elmLS": {
      "command": "~/.volta/bin/elm-language-server",
      "filetypes": ["elm"],
      "rootPatterns": ["elm.json"],
      "initializationOptions": {
        "elmAnalyseTrigger": "never"
      }
    },
    "ruby": {
      "command": "solargraph",
      "filetypes": ["ruby"]
    },
    "rust-analyzer": {
      "enable": true,
      "command": "rust-analyzer",
      "filetypes": ["rust"]
    },
    "tsserver": {
      "enable": true,
      "command": "tsserver",
      "filetypes": ["javascript", "typescript"]
    }
  },
  "codeLens.enable": true
}
