# vi:ft=zsh

# I'm a fan of colors
autoload -U colors && colors
setopt PROMPT_SUBST

function git_prompt {
  if $(git rev-parse --is-inside-work-tree 2>/dev/null); then
    branch=$(git symbolic-ref HEAD 2>/dev/null | cut -d'/' -f3- 2>/dev/null)
    echo " $branch"
  fi
}

PROMPT='[%{$fg[blue]%}%~%{$reset_color%}%{$fg[green]%}$(git_prompt)%{$reset_color%}]
$ '
